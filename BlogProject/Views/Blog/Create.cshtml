@model BlogProject.Models.Blog
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Add a New Blog</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Title)
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Content)
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Author)
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PublishDate)
                    <input asp-for="PublishDate" class="form-control" />
                    <span asp-validation-for="PublishDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CategoryId)
                    <select name="CategoryId" class="form-control">
                        <option value="1">Technology</option>
                        <option value="2">Travel</option>
                        <option value="3">Cooking</option>
                    </select>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.TagId)
                    <select name="TagId" class="form-control">
                        <option value="1">Toronto</option>
                        <option value="2">Cleveland</option>
                        <option value="3">Pittsburgh</option>
                    </select>
                </div>


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>


</body>
</html>
