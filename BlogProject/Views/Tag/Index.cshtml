@model IEnumerable<BlogProject.Models.Tag>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TagId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TagName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Tag in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Tag.TagId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Tag.TagName)
            </td>
            <td>
                @Html.ActionLink("Update", "Update", new { Tag.TagId }) |
                @Html.ActionLink("Delete", "Delete", new { Tag.TagName })
            </td>
        </tr>
}
    </tbody>
</table>

